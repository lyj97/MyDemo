<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 第一层阴影：左偏移2dp，上偏移4dp -->
    <item
        android:left="2dp"
        android:top="4dp">
        <shape>
            <solid android:color="@color/color_grayBackground" />
            <!--圆角-->
            <corners android:radius="15dp" />
        </shape>
    </item>
    <!-- 第二层前景：：底偏移4dp，右偏移2dp -->
    <item
        android:bottom="3dp"
        android:right="1dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <!-- 渐变色 -->
            <gradient
                android:angle="90"
                android:endColor="#FFFFFF"
                android:startColor="#FFFFFF"
                android:type="linear"/>

            <corners android:radius="15dp" />

            <!--设置内边距-->
            <padding android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp"/>

        </shape>
    </item>

</layer-list>