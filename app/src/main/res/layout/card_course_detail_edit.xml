<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/course_detail_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#4DFFFFFF">

        <RelativeLayout
            android:id="@+id/course_detail_edit_week_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_date_range_black_24dp"
                android:contentDescription="周数"/>

            <TextView
                android:id="@+id/course_detail_edit_week_layout_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                tools:text="周数"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/course_detail_edit_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_access_time_black_24dp"/>

            <TextView
                android:id="@+id/course_detail_edit_time_layout_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                tools:text="时间"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/course_detail_edit_teacher_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_perm_identity_black_24dp"/>

            <TextView
                android:id="@+id/course_detail_edit_teacher_layout_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                tools:text="教师"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/course_detail_edit_place_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_place_black_24dp"/>

            <TextView
                android:id="@+id/course_detail_edit_place_layout_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                tools:text="地点"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>