<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#00000000">

    <TextView
        android:id="@+id/score_course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/score_mark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/score_publish_time"
        android:textAlignment="center"
        tools:text="CourseName"/>

    <TextView
        android:id="@+id/score_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="25dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Score"/>

    <TextView
        android:id="@+id/score_publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/score_credit"
        app:layout_constraintTop_toBottomOf="@+id/score_mark"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAlignment="center"
        tools:text="Score"/>

    <TextView
        android:id="@+id/score_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/score_publish_time"
        app:layout_constraintEnd_toStartOf="@+id/score_gpa"
        app:layout_constraintTop_toBottomOf="@+id/score_mark"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAlignment="center"
        tools:text="Credit"/>

    <TextView
        android:id="@+id/score_gpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/score_credit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score_mark"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAlignment="center"
        tools:text="Score"/>

</androidx.constraintlayout.widget.ConstraintLayout>