<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom|center"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/pop_window_course_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_login"
        >

        <TextView
            android:id="@+id/pop_window_course_detail_layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="课程详情"
            android:textSize="17sp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:textColor="@color/app_white"
            />

        <LinearLayout
            android:id="@+id/pop_window_course_detail_information_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:baselineAligned="false"
            >

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="5dp"
                android:columnCount="2"
                android:orientation="horizontal">

<!--                <TextView-->
<!--                    android:background="@drawable/ic_date_range_white_24dp"/>-->

<!--                <TextView-->
<!--                    android:id="@+id/pop_window_course_detail_information_week"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Week, DayOfWeek"/>-->

                <TextView
                    android:background="@drawable/ic_alarm_white_24dp"/>

                <TextView
                    android:id="@+id/pop_window_course_detail_information_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"/>

                <TextView
                    android:background="@drawable/ic_place_white_24dp"/>

                <TextView
                    android:id="@+id/pop_window_course_detail_information_course_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CoursePlace"/>

                <TextView
                    android:background="@drawable/ic_perm_identity_white_24dp"/>

                <TextView
                    android:id="@+id/pop_window_course_detail_information_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teacher"/>

            </GridLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="18dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上课时间"/>

                <include
                    layout="@layout/view_course_weekly"
                    android:id="@+id/pop_window_course_detail_time"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>