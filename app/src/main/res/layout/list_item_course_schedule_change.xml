<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/listitem_selector"
    android:orientation="vertical">

    <TextView
        android:id="@+id/course_schedule_change_list_item_title"
        tools:text="title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/course_schedule_change_list_item_context1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="context"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/course_schedule_change_list_item_split1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" 上 "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/course_schedule_change_list_item_context2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="context"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/course_schedule_change_list_item_split2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" 的课"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>